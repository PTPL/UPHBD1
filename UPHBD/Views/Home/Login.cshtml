    <script type="text/javascript">
        function validateForm() {
            debugger;
            var uname = document.getElementById('UserName');
            var password = document.getElementById('Password');

            if (uname.value == "") {
                alert("Enter User Name");

                return false;
            }
            else if (password.value == "") {
                alert("Enter Password");

                return false;
            }
            return true;
        }
    </script>


    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.2/jquery.min.js"></script>
    <script>
        function CUG() {
            debugger;
            var lnkdl = document.getElementById('lnkdl');
            var txtcug = document.getElementById('cug');
            var btnLogin = document.getElementById('btnLogin');
            var btnDownload = document.getElementById("btnDownload");
            if (txtcug.style.display == "none") {
                txtcug.style.display = "block";
                btnLogin.style.display = "none";
                btnDownload.style.display = "block";
                lnkdl.style.display = "none";
            } else {
                txtcug.style.display = "none";
                btnLogin.style.display = "block";
                btnDownload.style.display = "none";
                lnkdl.style.display = "block";
            }
        }

    </script>

    <script type="text/javascript">
        function isNumberKey(evt) {
            var charCode = (evt.which) ? evt.which : evt.keyCode;
            if (charCode != 46 && charCode > 31
                && (charCode < 48 || charCode > 57))
                return false;

            return true;
        }
    </script>
    

