        <h1 style="font-size: 30px;">Login</h1>

        @using (Html.BeginForm("Login", "Home", FormMethod.Post))
        {

            @Html.ValidationMessageFor(model => model.UserId, string.Empty, new { style = "float:right;margin-right:18px" })
            @Html.TextBoxFor(m => m.UserId, new { @class = "form-control", @placeholder = "Enter User ID", @required = "required", id = "UserName" })


            @Html.ValidationMessageFor(model => model.Password, string.Empty, new { style = "float:right;margin-right:18px" })
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Enter Password", @required = "required", id = "Password" })

             
            
      
            <div style="float: left; padding-bottom: 15px;">

                <a href="#" id="lnkdl" onclick="CUG();">Download Contacts</a>
            </div>
      
            <div style="float: right; padding-bottom: 15px;">

                <a href="#">Forgot Password</a>
            </div>

            <button type="submit" id="btnLogin" onclick="return validateForm()" style="background: #0F75C8; color: #fff">Login</button>
        }
        
          @using (Html.BeginForm("CheckCug", "Home", FormMethod.Post))
          {
              <input type="text" class="form-control" name="cug" id="cug"  style="display: none" placeholder="Enter CUG Number" onkeypress="return isNumberKey(event)" maxlength="10"/>
                <button type="submit" id="btnDownload" onclick="return CUG()" style="background: #0F75C8; color: #fff;display: none">Download Contacts</button>
